<h3><%= @event.name %></h3>
<p>
  <strong><%= @event.start_date.strftime("%A, %B %d") %></strong>
</p>
<%= link_to @event.location.name, @event.location %>
<p>
  <%= @event.start_date.in_time_zone.strftime("%I:%M %p") %> - <%= @event.end_date.in_time_zone.strftime("%I:%M %p") %>
</p>
<div id = "user-status">
  <%= render 'user_status' %>
</div>
<div id="event-buttons" class="form-actions">
  <%= render 'buttons' %>
</div>

<% if can? :destroy, @event %>
<%= "Current Time: " +Time.now.to_s %>
   <% if @event.next_reminder_time %>
   <br>
     Next Reminder: <%= @event.next_reminder_time %>
   <% end %>
    <% if @event.next_reminder_type %>
   <br>
    Type: <%= @event.next_reminder_type %>
   <% end %>
<% end %>




