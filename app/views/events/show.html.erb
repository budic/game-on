<h3><%= @event.name %></h3>
<p>
  <strong><%= @event.start_date.strftime("%A, %B %d") %></strong>
</p>
<%= link_to @event.location.name, @event.location %>
<p>
  <%= @event.start_date.in_time_zone.strftime("%I:%M %p") %> - <%= @event.end_date.in_time_zone.strftime("%I:%M %p") %>
</p>

<div id = "user-status">
  <%= render 'user_status' %>
</div>
<div id="event-buttons" class="form-actions">
  <%= render 'buttons' %>
</div>
<div id="event-comments" >
  <%= render 'commentbox' %>
</div>

<% if can? :destroy, @event %>
  Next notification: <%= @event.next_reminder_time.in_time_zone %>
<% end %>




