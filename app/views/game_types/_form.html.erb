<%= simple_form_for(@game_type) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name, :input_html => {:class => 'form-control' } %>
    <%= f.input :level1, :input_html => {:class => 'form-control' } %>
    <%= f.input :level2, :input_html => {:class => 'form-control' } %>
    <%= f.input :level3, :input_html => {:class => 'form-control' } %>
    <%= f.input :level4, :input_html => {:class => 'form-control' } %>
    <%= f.input :level5, :input_html => {:class => 'form-control' } %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
