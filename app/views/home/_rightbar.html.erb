      <div id='searchLocations'>
        <%= form_tag( '/home', :remote=>true, :id => 'weekly-upd', :class => 'form-search', 'data-update-target' => 'weekly'  ) do %>
        <%= label_tag("Find games near") %>
        <p>
          <div class="input-append">
            <%= text_field_tag :search, params[:search], {class: 'input-xxlarge search-query'} %>
            <%= submit_tag("Search", {class: 'btn btn-info search-query'}) %>
          </div>
        <% end %>
        
      <div id='weekly'>
        <%= render 'recurring_event' %>
      </div>
