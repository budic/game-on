<%= simple_form_for(@recurring_event) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, :input_html => {:class => 'form-control' }  %>
    <%= f.association :game_type, :input_html => {:class => 'form-control' } %>
    <div class="control-group">
      <label class="control-label" for=:day>Day of week</label>
      <div class="controls input select required form-control">
        <%= f.select :day, Date::DAYNAMES.zip((0..6).to_a), :input_html => { :class => 'form-control' }  %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for=:start_time>Start Time</label>
      <div class="controls form-control">
        <%= f.time_select :start_time,
          :combined => true,
          :default => Time.now.change(:hour => 11, :min => 30),
          :minute_interval => 15,
          :time_separator => "",
          :start_hour => 0,
          :start_minute => 30,
          :end_hour => 23,
          :end_minute => 30
        %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for=:end_time>End Time</label>
      <div class="controls form-control">
        <%= f.time_select :end_time,
          :combined => true,
          :default => Time.now.change(:hour => 11, :min => 30),
          :minute_interval => 15,
          :time_separator => "",
          :start_hour => 0,
          :start_minute => 30,
          :end_hour => 23,
          :end_minute => 30
        %> 
      </div>
    </div>
    <%= f.input :location_id, :as => :hidden %>
  <br>
<%= f.button :submit, "Save",:class => "btn btn-success" %>
<% end %>


