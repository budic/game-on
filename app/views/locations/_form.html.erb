<%= simple_form_for(@location, html: {novalidate: true}) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name, :input_html => {:class => 'input-xxlarge form-control'} %>
    <%= f.input :address, :input_html => {:class => 'input-xxlarge form-control'} %>
    <%= f.input :email, :input_html => {:class => 'input-xlarge form-control'} %>
    <%= f.input :website, :input_html => {:class => 'input-xlarge form-control'} %>
  </div>
  <br>
  <div class="actions">
    <%= f.button :submit, :class => 'btn btn-success'%>
  </div>
<% end %>
